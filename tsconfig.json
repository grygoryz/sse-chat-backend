{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "strict": true,
    "baseUrl": "./",
    "paths":{
      "@common/*":["src/common/*"],
      "@databases/*":["src/databases/*"],
      "@config":["src/config"],
      "@helpers":["src/helpers"],
      "@helpers/*":["src/helpers/*"]
    }
  }
}
